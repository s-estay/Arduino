const uint8_t pwmPins[3] = {9, 10, 11};
const uint8_t leds[5] = {2, 3, 4, 5, 6};

int counter = 0;
byte a = B00000001;

void setRGBpoint(uint8_t red, uint8_t green, uint8_t blue){
  analogWrite(pwmPins[0], 255 - red);
  analogWrite(pwmPins[1], 255 - green);
  analogWrite(pwmPins[2], 255 - blue);
}

void sineLED(int angle){
  setRGBpoint(lights[(angle + 120)%360], lights[angle], lights[(angle + 240)%360]);
}

byte bitSL(){
  if(counter < 7){
    a = a << 1;
    counter++;
  }
  else{
    bitWrite(a, 0, 1);
    counter = 0; 
  }
  return a;
}

void setup(){
  for(int i = 0; i < 5; ++i){
    pinMode(leds[i], OUTPUT);
  }
}

void loop(){
  for(int k = 0; k < 360; ++k){
    sineLED(k);

    byte a = bitSL();

    digitalWrite(2, bitRead(a, 7));
    digitalWrite(3, bitRead(a, 6));
    digitalWrite(4, bitRead(a, 5));
    digitalWrite(5, bitRead(a, 4));
    digitalWrite(6, bitRead(a, 3));  
    
    delay(100);
  }
}
